<div class="banner">
  <div class="banner-link-items ">
    <%= link_to "CoffeeGrinder", root_path, class: "navbar-logo", style: "padding-left: 3vh;" %>

    <div class="d-flex banner-item">
      <%= link_to "Browse", coffeehouses_path, class: "banner-item", style: "text-decoration: none;" %>
      <% if current_user.nil? %>
            <%= link_to "Sign up", new_user_registration_path, class: "banner-item" %>
      <% else %>
        <%= render 'shared/avatar_dropdown' %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My dashboard", dashboard_path, class: "dropdown-item" %>
          <%= link_to "My profile", profile_path, class: "dropdown-item" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
        </div>
      <% end %>
    </div>
  </div>
    <div class="container banner-container">

      <div>
        <h1> Good Coffee. Good Conversation.<br> <span class="banner-logo"> CoffeeGrinder</span> </h1>
        <h3>Browse Coffeeshops around you and socialize!</h3>
      </div>

      <div class="banner-search-container">
        <div class="banner-search-bar">
          <%= form_tag coffeehouses_path, method: :get, style:"width:100%" do %>
          <%= text_field_tag :location_query,
            params[:location_query], class: "form-control",
            placeholder: "Type in your address...", class: "banner-search" %>
            <%= submit_tag 'Search!', class: "btn btn-search btn-search-banner" %>
          <% end %>
        </div>
      </div>
  </div>
</div>

