<div class="navbar navbar-expand-sm navbar-coolfit d-flex justify-content-between">
  <div class="navbar-left">
    <div class="navbar-search">
      <%= link_to "CoffeeGrinder", root_path, class: "navbar-logo" %>
    </div>
  </div>

  <div class="navbar-right">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto navbar-right">
        <li class="nav-item dropdown">
          <%= link_to "Browse", coffeehouses_path, class: "btn sign-in-btn", style: "text-decoration: none;" %>
          <% if current_user.nil? %>
            <%= link_to "Sign up", new_user_session_path, class: "btn sign-in-btn" %>
          <% else %>
            <%= render 'shared/avatar_dropdown' %>
            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                <%= link_to "My dashboard", dashboard_path, class: "dropdown-item" %>
              <%= link_to "My profile", profile_path, class: "dropdown-item" %>
              <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
