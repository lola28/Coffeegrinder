<p id="notice"><%= notice %></p>


<div class="index-container">
  <div class="cards-index">
    <% @coffeehouses.each do |coffeehouse| %>
      <div class="cards-index d-flex justify-content-between">
        <div class="card-index-infos d-flex justify-content-between">
          <div class="card-index-text">
            <%= link_to coffeehouse do %>
              <h3><strong><%= coffeehouse.name %></strong></h3>
            <% end %>
            <p><%= coffeehouse.description %></p>
          </div>
        </div>
      </div>
      <% end %>
      <% if @coffeehouses.empty? %>
      <div class="empty-search-img">
        <%= image_tag ("coffee_icon.png")%>
        <h3>Sorry, there is nothing matching your search...</h3>
      </div>
    <% end %>
  </div>

  <% if !@coffeehouses.empty? %>
    <div class="map-container" style="position: sticky; top: 50px;">
      <div
        id="map"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
        class="map"
      >
      </div>
    </div>
  <% end %>
    </div>
</div>



